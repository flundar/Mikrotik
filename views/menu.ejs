<script>
  let selectPage = document.getElementById("tableofvpn")

   let profilesHTML = ``
        var profiles = '<%- JSON.stringify(profiles) %>'
        if (profiles) {

            profiles = JSON.parse(profiles)


            for (let i = 0; i < profiles.length; i++) {
                profilesHTML +=
                    `
                    <tr> 

                    <td>${profiles[i].name}</td>
                    <td>${profiles[i].password}</td>
                    <td><button class="btn btn-block bg-gradient-success" onClick="showEdit(${i})">Edit</button> </td>
                    <td><button class="btn btn-block bg-gradient-danger" onClick="deletePost(${i})">Remove</button> </td>
                    </tr>
            `
            }
        } else {
            profilesHTML +=
                `
        <span>No Value</span>
        `
        }
        selectPage.innerHTML =
            `
                ${profilesHTML}
    `

        function deletePost(id) {
            console.log("remove!")
            window.post = function (url, data) {
                return fetch(url, {
